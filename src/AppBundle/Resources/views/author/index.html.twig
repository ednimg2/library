{% extends '@App/base.html.twig' %}

{% block body %}
    <h1>Authors list</h1>
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for author in authors %}
                <tr>
                    <th width="40" scope="row">{{ author.id }}</th>
                    <td><a href="{{ path('author_show', { 'id': author.id }) }}">{{ author.name }}</a></td>
                    <td width="100">
                        <a class="btn btn-primary btn-sm" href="{{ path('author_edit', { 'id': author.id }) }}">edit</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <a class="btn btn-success btn-lg" href="{{ path('author_new') }}">Create a new author</a>

{% endblock %}
